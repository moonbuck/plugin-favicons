{{- $theme := site.Data.plugin_favicons_params }}
{{- $plugin := site.Data.plugin_favicons.params }}
{{- $data := $theme.AndroidChrome | default $plugin.AndroidChrome -}}
{{- with $data -}}
{
    {{- with .Name -}}
    "name": "{{ . }}",
    "short_name": "{{ . }}",
    {{- end -}}
    "icons": [
      {{- with .x192 -}}
        {
            "src": "{{ . }}",
            "sizes": "192x192",
            "type": "image/png"
        },
      {{- end -}}
      {{- with .x512 -}}
        {
            "src": "{{ . }}",
            "sizes": "512x512",
            "type": "image/png"
        }
      {{- end -}}
    ],
    {{ with .ThemeColor }}"theme_color": "{{ . }}",{{ end }}
    {{ with .BackgroundColor }}"background_color": "{{ . }}",{{ end }}
    "display": "standalone"
}

{{- end -}}