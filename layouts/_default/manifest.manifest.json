{{- $theme := site.Data.plugin_favicons_params }}
{{- $plugin := site.Data.plugin_favicons.params }}
{{- $ac_name := ($theme.AndroidChrome.Name | default $plugin.AndroidChrome.Name) | default (urls.Parse site.BaseURL).Host }}
{{- $ac_192 := $theme.AndroidChrome.x192 | default $plugin.AndroidChrome.x192 }}
{{- $ac_512 := $theme.AndroidChrome.x512 | default $plugin.AndroidChrome.x512 }}
{{- $ac_theme_color := $theme.AndroidChrome.ThemeColor | default $plugin.AndroidChrome.ThemeColor }}
{{- $ac_bg_color := $theme.AndroidChrome.BackgroundColor | default $plugin.AndroidChrome.BackgroundColor }}
{
    "name": "{{ $ac_name }}",
    "short_name": "{{ $ac_name }}",
    "icons": [
        {
            "src": "{{ $ac_192 }}",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "{{ $ac_512 }}",
            "sizes": "512x512",
            "type": "image/png"
        }
    ],
    "theme_color": "{{ $ac_theme_color }}",
    "background_color": "{{ $ac_bg_color }}",
    "display": "standalone"
}
